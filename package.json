{
  "name": "jg-rsync",
  "version": "1.0.0",
  "description": "A lightweight, production-grade three-pane file transfer application for macOS",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "npx electron .",
    "dev": "concurrently -k \"vite --port 5173\" \"wait-on http://localhost:5173 && NODE_ENV=development npx electron .\"",
    "build": "tsc && vite build",
    "build:main": "tsc",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "file-transfer",
    "rsync",
    "sftp",
    "macos",
    "three-pane",
    "lightweight",
    "typescript",
    "react"
  ],
  "author": "JG-Rsync",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.6.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2-sftp-client": "^10.0.3"
  }
}
