{
  "name": "jg-rsync",
  "version": "1.0.0",
  "description": "A production-grade two-pane file transfer app for macOS",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "cleanup": "./cleanup.sh",
    "electron:dev": "npm run cleanup && npm run build:main && concurrently -k \"vite --port 5173\" \"wait-on http://localhost:5173 && NODE_ENV=development electron . --inspect=5858\"",
    "build": "tsc && vite build && electron-builder",
    "build:main": "tsc",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build:main && npm run build:renderer && electron-builder --dir",
    "mac": "npm run build:main && npm run build:renderer && electron-builder --mac",
    "dmg": "npm run build:main && npm run build:renderer && electron-builder --mac dmg",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "file-transfer",
    "rsync",
    "sftp",
    "macos"
  ],
  "author": "JG-Rsync",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "lucide-react": "^0.294.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "ssh2-sftp-client": "^10.0.3",
    "tailwindcss": "^3.4.0"
  },
  "build": {
    "appId": "com.jg-rsync.app",
    "productName": "JG-Rsync",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "title": "JG-Rsync Installer",
      "icon": "assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "npmRebuild": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
